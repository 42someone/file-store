{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "outDir": "build",
    "declaration": true,
    "declarationDir": "typings",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "newLine": "lf",
    "lib": [
      "es2017",
      "esnext"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}